{
    "name": "thelhc/customer-payment",
    "description": "Laravel model extensions to setup customer payment profiles and charges",
    "authors": [
        {
            "name": "Aaron Michael Music",
            "email": "aaronmichaelmusic@gmail.com"
        }
    ],
    "require": {
        "php": "~5.6|~7.0",
        "illuminate/database": "5.1.* || 5.2.* || 5.3.* || 5.4.* || 5.5.*",
        "illuminate/support": "5.1.* || 5.2.* || 5.3.* || 5.4.* || 5.5.*",
        "cartalyst/stripe": "2.0.9"
    },
    "require-dev": {
      "phpunit/phpunit": "^5.4 || ~6.0",
      "orchestra/testbench": "~3.0",
      "vlucas/phpdotenv": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "TheLHC\\CustomerPayment\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TheLHC\\CustomerPayment\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
